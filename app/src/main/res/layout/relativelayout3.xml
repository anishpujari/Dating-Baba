<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_hobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Hobbies and Interests"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_hobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_hobbies"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Type your hobbies and interests here..."
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:minHeight="48dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/text_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Instagram ID"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/edit_hobbies"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edit_instagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_instagram"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter your Instagram handle"
        android:minHeight="48dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/text_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload a Profile Photo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/edit_instagram"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/text_profile_photo"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_camera"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/btn_upload_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Photo"
        android:layout_below="@id/image_profile"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_below="@id/btn_upload_photo"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
